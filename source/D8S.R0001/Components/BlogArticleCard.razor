@namespace D8S.R0001


<div>
    <p class="text-sm text-gray-500">
        <time datetime="@(Instances.DateTimeOperator.ToString_YYYY_MM_DD(this.PublishedDateTime))">@(Instances.DateTimeOperator.ToString_MMM_DD_YYYY(this.PublishedDateTime))</time>
    </p>
    <a href="@(this.RelativeHref)" class="mt-2 block">
        <p class="text-xl font-semibold text-gray-900">@(this.Title)</p>
        <p class="mt-3 text-base text-gray-500">@(this.Description)</p>
    </a>
    <div class="mt-3">
        <a href="@(this.RelativeHref)" class="text-base font-semibold text-indigo-600 hover:text-indigo-500">Read full story</a>
    </div>
</div>


@code{
    [Parameter]
    public string Title { get; set; }

    [Parameter]
    public string Description { get; set; }

    [Parameter]
    public string RelativeHref { get; set; }

    [Parameter]
    public DateTime PublishedDateTime { get; set; }
}
